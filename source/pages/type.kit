<main id="type">
  
  <style>
    .stars {
      background: none;
    }
    
    .stars canvas {
      display: none;
    }
    
    .stars div, .stars div a, .stars div a:visited {
      color: #33002A;
    }
    
    main {
      padding-top: calc(30vh - 10em);
      padding-bottom: 0;
      max-width: 64em;
    }
    
    
    #type a {
      display: inline-block;
      font-size: 2em;
      padding-right: 2em;
    }
    
    @media(max-width: 600px) {
      #type a {
        display: block;
      }
    }
    
    #bg {
      position: relative;
      display: flex;
      flex-direction: column;
      margin-top: -6em;
      width: 100%;
      height: 100%;
      z-index: -1;
    }
    
    #bg .spacer {
      flex: 1 0 calc(10em - 10vh);
    }
    
    #bg img {
      flex: 0 0 100vw;
      width: 100vw;
      height: 100vw;
    }

  </style>
  
  <title>By Type</title>
  <div class="inbl">
    <a href="/art">Art</a>
    <a href="/blog">Blog</a>
  </div>
  <div class="inbl">
    <a href="/code">Code</a>
    <a href="/intermedia">Intermedia</a>
  </div>
  <div class="inbl">
    <a href="/music">Music</a>
    <a href="/project">Project</a>
  </div>
  
</main>

<div id="bg"><div class="spacer"></div><img src="https://ivanreese.s3.amazonaws.com/type/bg.png"></div>
