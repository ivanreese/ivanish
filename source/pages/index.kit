<main id="index">
  <script defer src="/index/index.js"></script>

  <style>
    a.header-index-link { text-decoration: none; }
    a.header-index-link:hover, a.header-index-link:visited:hover { color: white; }

    header {
      height: 100vh;
    }

    @media(min-width: 600px) {
      header {
        height: calc(100vh - .5em - .5vw);
        margin-bottom: calc(.5em + .5vw);
      }
    }

    header div {
      display: inline-block;
      position: relative;
      text-align: center;
      color: white;
      z-index: 2;
      padding: 0;
      margin-top: calc(40vh - 1em);
      line-height: 1.9;
      font-size: 1.4em;
    }

    header div a {
      color: hsla(240, 100%, 97%, .9);
      line-height: 1;
    }

    main {
      padding: 0 3vw 16vh;
    }

    @media(min-width:58em) {
      main {
        padding: 0 0 16vh;
      }
    }

    #index .hero {
      position: absolute; /* Force the hero to draw on top of the header. */
      border-radius: 100%;
      z-index: 11;
      background: white;
      border: calc(.5em + .5vw) solid white;
      /* The hero image is sized and positioned with JS, down below */
    }

    #index .hero div {
      width: 100%;
      height: 100%;
      border-radius: 100%;
      background-color: hsl(7, 7%, 73%);
      background-image: url("https://ivanish.s3.amazonaws.com/assets/bio-portrait-1500.jpg");
      background-size: cover;
      background-repeat: no-repeat;
      background-position: top center;
    }

    @media(max-width: 1000px) { #index .hero div { background-image: url("https://ivanish.s3.amazonaws.com/assets/bio-portrait-1000.jpg"); } }
    @media(max-width: 750px)  { #index .hero div { background-image: url("https://ivanish.s3.amazonaws.com/assets/bio-portrait-750.jpg"); } }
    @media(max-width: 500px)  { #index .hero div { background-image: url("https://ivanish.s3.amazonaws.com/assets/bio-portrait-500.jpg"); } }

    #index h1 {
      margin: 50vh 0 4vh;
      font-size: 3em;
      line-height: 1.3em;
    }

    #index #about h1 {
      margin-top: 70vh;
    }

    #index #bio h1 {
      margin-left: -4px;
    }

    #index #contact h1 {
      margin-left: -3px;
    }

    .columns {
      columns: 20em;
      column-gap: 2em;
      margin-bottom: 4vh;
    }

    .label {
      display: block;
      text-transform: uppercase;
      letter-spacing: 1px;
      font-size: .75em;
    }

    p + .label {
      margin-top: 2vh;
    }

    .related {
      margin-top: 20vh;
    }
  </style>

  <title class="hide">Ivan Reese</title>

  <div class="hero"><div></div></div>

  <script>
    // This sucks, but it makes Android happy UGH
    (function(){
      var width = null;
      var heroImage = null;
      function inlineResize() {
        if (width != window.innerWidth) {
          width = window.innerWidth
          if (heroImage == null) {
            heroImage = document.querySelector("#index .hero");
            if (heroImage == null) { return }
          }
          if (window.innerWidth > window.innerHeight * .78) {
            heroImage.style.top = (.65 * window.innerHeight) + "px";
            heroImage.style.left = "50%";
            heroImage.style.width = (.7 * window.innerHeight) + "px";
            heroImage.style.height = (.7 * window.innerHeight) + "px";
            heroImage.style.marginLeft = (-.35 * window.innerHeight) + "px";
          } else {
            heroImage.style.top = (window.innerHeight - .45 * window.innerWidth) + "px";
            heroImage.style.left = (.1 * window.innerWidth) + "px";
            heroImage.style.width = (.8 * window.innerWidth) + "px";
            heroImage.style.height = (.8 * window.innerWidth) + "px";
            heroImage.style.marginLeft = null
          }
        }
      };
      inlineResize();
      requestAnimationFrame(inlineResize);
      window.addEventListener("resize", inlineResize);
    })();
  </script>

